{
    "extends": ["tslint:recommended", "tslint-config-standard", "tslint-config-prettier"],
    "rules": {
        "align": [true, "parameters", "statements"],
        "ban": false,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "eofline": true,
        "forin": false,
        "indent": [true, "spaces"],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": true,
                "CallExpression": {
                    "arguments": 1
                }
            }
        ],
        "interface-name": false,
        "no-reference": false,
        "no-shadowed-variable": false,
        "one-variable-per-declaration": false,
        "no-extra-boolean-cast": false,
        "handle-callback-err": false,
        "jsx-no-lambda": false,
        "jsdoc-format": true,
        "label-position": true,
        "max-classes-per-file": false,
        "prefer-for-of": false,
        "max-line-length": [
            false,
            {
                "limit": 200,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "case-insensitive"
            }
        ],
        "no-namespace": false,
        "ban-types": false,
        "no-empty-interface": false,
        "no-string-literal": false,
        "member-access": false,
        "member-ordering": [false, "public-before-private", "static-before-instance", "variables-before-functions"],
        "no-any": false,
        "no-arg": true,
        "only-arrow-functions": false,
        "no-bitwise": false,
        "no-consecutive-blank-lines": false,
        "no-conditional-assignment": false,
        "no-console": [true, "info", "time", "timeEnd", "trace"],
        "no-construct": true,
        "no-constructor-vars": false,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-inferrable-types": false,
        "no-internal-module": true,
        "no-require-imports": false,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unreachable": false,
        "no-unused-variable": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
        "quotemark": [true, "single", "avoid-escape"],
        "radix": true,
        "semicolon": true,
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "triple-equals": [true, "allow-null-check"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "allow-leading-underscore", "ban-keywords"],
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"]
    }
}
